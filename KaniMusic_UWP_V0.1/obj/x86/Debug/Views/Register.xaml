<ContentDialog x:ConnectionId='1'
    x:Class="KaniMusic_UWP_V0._1.Views.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KaniMusic_UWP_V0._1.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Đăng Ký"
    
    x:Name="dialogRegister">

    <ScrollViewer>
        <StackPanel x:ConnectionId='2' Margin="20, 0, 0, 0" HorizontalAlignment="Center" x:Name="ParentStackPanel">
            <TextBox x:ConnectionId='3' x:Name="Email" Margin="0, 20, 0, 0" Header="Email" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="293" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>
            <TextBlock x:ConnectionId='4' x:Name="Email_Message"/>
            <PasswordBox x:ConnectionId='5' x:Name="Password" Margin="0, 20, 0, 0" Header="Mật Khẩu" Width="293" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>
            <TextBlock x:ConnectionId='6' x:Name="Password_Message"/>
            <TextBox x:ConnectionId='7' x:Name="FirstName" Margin="0, 20, 0, 0" Header="Tên" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="293" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>
            <TextBlock x:ConnectionId='8' x:Name="Firstname_Message"/>
            <TextBox x:ConnectionId='9' x:Name="LastName" Margin="0, 20, 0, 0" Header="Họ" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="293" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>
            <TextBlock x:ConnectionId='10' x:Name="Lastname_Message"/>
            <TextBox x:ConnectionId='11' x:Name="Phone" Margin="0, 20, 0, 0" Header="Số Điện Thoại" HorizontalAlignment="Left" Text="" VerticalAlignment="Top" Width="293" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>
            <TextBlock x:ConnectionId='12' x:Name="Phone_Message"/>
            <TextBlock Text="Gender" Margin="0, 20, 0, 0" Width="290" HorizontalAlignment="Left"/>
            <TextBlock x:ConnectionId='13' x:Name="Gender_Message"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <RadioButton x:ConnectionId='24' Content="Nam" Tag="1"                        />
                <RadioButton x:ConnectionId='25' Content="Nữ" Tag="0"                        />
                <RadioButton x:ConnectionId='26' Content="Khác" Tag="2"                         IsChecked="True"/>
            </StackPanel>
            <CalendarDatePicker x:ConnectionId='14' x:Name="BirthDay" Header="Ngày Sinh" Margin="0, 20, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="174" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"                              />
            <TextBlock x:ConnectionId='15' x:Name="Birthday_Message"/>
            <TextBox x:ConnectionId='16' AcceptsReturn="True" x:Name="Address" Margin="0, 15, 0, 0" Header="Địa Chỉ" HorizontalAlignment="Left" Width="293" Height="100" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"                                  />
            <TextBox x:ConnectionId='17' AcceptsReturn="True" x:Name="Introduction" Margin="0, 20, 0, 0" Header="Giới Thiệu" HorizontalAlignment="Left" Width="293" Height="100" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:ConnectionId='23' Content="Chụp Ảnh" Margin="0,0,10,0" VerticalAlignment="Top" Width="135" Height="50" Background="#FFE6B257" FontFamily="Tahoma" FontSize="16"                      />
                <Button Content="Chọn Ảnh Từ PC" Margin="10,0,0,0" VerticalAlignment="Top" Width="135" Height="50" Background="#FFE6B257" FontFamily="Tahoma" FontSize="16"/>
            </StackPanel>

            <Image x:ConnectionId='18' x:Name="MyAvatar" Margin="0,20,0,0" Width="140" Height="140" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='19' x:Name="ImageUrl" Margin="0,20,0,0" Header="Url Ảnh" HorizontalAlignment="Left" Text="" VerticalAlignment="Bottom" Width="350" Background="#66EDF364" FontFamily="Tahoma" FontSize="16"/>

            <!--button chức năng-->
            <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                <Button x:ConnectionId='20' Grid.Row="1" Content="Yes" x:Name="btn1"                  Margin="5,0" Width="100" Background="#3F0AC36F" />
                <Button x:ConnectionId='21' Grid.Row="1" Grid.Column="1" Content="No" x:Name="btn2"                  Margin="5,0" Width="100" />
                <Button x:ConnectionId='22' Grid.Row="1" Grid.Column="2" Content="Cancle" x:Name="btn3"                   Margin="5,0" Width="100" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>

